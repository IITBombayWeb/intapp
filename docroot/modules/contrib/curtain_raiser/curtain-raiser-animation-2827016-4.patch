+/**
+ * @file
+ * Contains curtain_raiser.module.
+ */
+use Drupal\Core\Entity\EntityInterface;
+use Drupal\node\NodeInterface;
+use Drupal\node\NodeTypeInterface;
+use Drupal\node\Entity\Node;
+use Drupal\Core\Url;
+use Drupal\Component\Utility\Unicode;
+
+function curtain_raiser_page_top(array &$page_top) {
+
+
+  $path = drupal_get_path('module', 'curtain_raiser');
+  $page_top['#markup'] = '
+    <div class="curtain-raiser">
+      <div id="effect">
+        <img src="../' . $path . '/images/curtain.jpg" id="curtain1">
+        <img src="../' . $path . '/images/curtain.jpg" id="curtain2">
+        <div class="curtain-raiser-content">
+          <div>
+            <h1>COMING SOON</h1>
+            <a href="#" type="button" class="inaugurate">Inaugurate</a>
+          </div>
+      </div>
+    </div>
+  </div>';
+
+  $page_top['#attached']['library'][] = 'curtain_raiser/curtain_raiser';
+  return $page_top;
+
+}
